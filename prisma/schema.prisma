// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Medication {
  id            Int @id @default(autoincrement())
  name          String @unique
  stock         Int
  dosage        Int
  renewed       DateTime
}

model User {
  id            Int     @id @default(autoincrement())
  email         String  @unique
  firstname     String?
  lastname      String?
  username      String?
  password      String?
}
